<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorCC"
    android:gravity="center"
    android:minHeight="300dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:layout_gravity="center"
        android:scaleType="fitCenter"
        android:src="@mipmap/error_icon" />

    <TextView
        android:id="@+id/tv_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="未登录"
        android:textColor="@color/colorC3"
        android:textSize="@dimen/text13spF4" />

    <Button
        android:id="@+id/btn_reconnect"
        android:layout_width="120dp"
        android:layout_height="32dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@color/colorC10"
        android:gravity="center"
        android:text="登录"
        android:textColor="@color/colorCC"
        android:textSize="@dimen/text14spF3" />
</LinearLayout>