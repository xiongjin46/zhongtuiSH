<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorC5"
    android:orientation="vertical">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_margin="12dp"
        android:background="@drawable/btn_login_ll"
        android:gravity="top"
        android:padding="12dp"
        android:hint="把您的问题或想法告诉我们"
        android:textColorHint="@color/colorC3"
        android:textSize="15sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/btn_addstore_ship"
        android:gravity="center_horizontal"
        android:text="@string/push"
        android:textColor="@color/colorCC"
        android:textSize="17sp" />

</LinearLayout>