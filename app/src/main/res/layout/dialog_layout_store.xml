<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/ll"
        android:layout_width="340dp"
        android:layout_height="84dp"
        android:layout_marginBottom="72dp"
        android:background="@drawable/shape_border_radius_white">

        <ImageView
            android:id="@+id/iv_store"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="12dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="14dp"
            android:layout_marginTop="14dp"
            android:layout_toRightOf="@id/iv_store"
            android:orientation="vertical"
            android:weightSum="3">

            <TextView
                android:id="@+id/tv_store_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textColor="@color/textview_black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_store_address"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/colorC3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/detail_orange" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/å¤©"
                    android:textColor="@color/colorC3" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_sup_size"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            android:background="@mipmap/ellipse1"
            android:gravity="center"
            android:textColor="@color/colorCC" />
    </RelativeLayout>
</LinearLayout>