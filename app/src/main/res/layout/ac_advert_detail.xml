<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorC5">

    <LinearLayout
        android:id="@+id/ll_advet"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="1dp"
        android:background="@color/colorCC"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_call"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:background="@drawable/btn_advet_blue"
            android:gravity="center"
            android:text="咨询"
            android:textColor="@color/colorCC"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_order"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:background="@drawable/btn_advet_or"
            android:gravity="center"
            android:text="预约"
            android:textColor="@color/colorCC"
            android:textSize="17sp" />
    </LinearLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/ll_advet"
        android:background="@color/colorC5"
        android:scrollbars="none">

        <include layout="@layout/detail_layout_push" />

    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>